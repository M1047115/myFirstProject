			driver.get("https://www.google.com/");
		}
		
		public void ques2()
		{
			String pathChromeDriver = "C:\\\\Users\\\\M1047115\\\\eclipse-workspace\\\\test\\\\driver\\\\chromedriver.exe";
			System.setProperty("webdriver.chrome.driver", pathChromeDriver);
			driver = new ChromeDriver();
			driver.get("https://www.google.com/");
			driver.navigate().refresh();
		}
		public void ques5()
		{
			String pathChromeDriver = "C:\\Users\\M1047138\\Downloads\\chromedriver_win32\\chromedriver.exe";
			System.setProperty("webdriver.chrome.driver", pathChromeDriver);
			driver= new ChromeDriver();
			driver.get("https://www.amazon.in/");
			try {
				Thread.sleep(3000);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			driver.findElement(By.xpath("//span[contains(text(),'Hello. Sign in')]")).click();
			
			Actions builder = new Actions(driver);
		    Action enterText = builder.click(driver.findElement(By.
		                       cssSelector("input[type=email]"))).
		                       keyDown(Keys.SHIFT).
		                       sendKeys("my gmail").
		                       keyUp(Keys.SHIFT).
		                       build();
		    enterText.perform();
			
			//driver.findElement(By.xpath("//span[@class='a-button-inner']")).click();
			
		}
		public static void main(String[] args) {
			
	}
		
